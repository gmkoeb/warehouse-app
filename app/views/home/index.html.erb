<section id="warehouses">
  <h2><%= t('activerecord.models.warehouse', count: @warehouses.count) %></h2>
  <div>
    <%= link_to 'Cadastrar Galpão', new_warehouse_path %>
  </div>
  <% @warehouses.each do |warehouse| %>
    <div>      
      <h3><%= link_to warehouse.name, warehouse_path(warehouse.name.parameterize) %></h3>
      <dl>
        <dt>Código:</dt>
        <dd><%= warehouse.code %></dd>
        <dt>Cidade:</dt>
        <dd><%= warehouse.city %></dd>
        <dt>Área:</dt>
        <dd><%= warehouse.area %> m²</dd>
      </dl>
    </div>
  <%end%>
  <% if @warehouses.empty? %>
    <h2>Não existem galpões cadastrados.</h2>
  <% end %>
</section>